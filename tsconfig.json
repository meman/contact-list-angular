{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir":"./app"
  },
  "exclude": [
      "node_modules"
  ],
  "filesGlob": [
    "app/**/*.ts",
    "typings/**/*.d.ts"
  ]
}
